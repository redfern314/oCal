extends layout

block head
  link(rel='stylesheet', href='/css/bootstrap.css')
  link(rel='stylesheet', href='/css/bootstrap.cerulean.min.css')
  script(src="/js/jquery.min.js")
  script(src="/js/moment.min.js")
  script(src="/js/fullcalendar.js")
  script(src="/js/cal.js")
  script(type="text/javascript").
    $(function() {
        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay'
            },
            editable: true,
            eventLimit: true // allow "more" link when too many events
        });
    });
  link(rel='stylesheet', href='/css/fullcalendar.css')
  link(rel='stylesheet', href='/css/ocal.css')

block content
  div(class="navbar navbar-default navbar-fixed-top" role="navigation")
    div(class="container-fluid")
      div(class="navbar-header")
        a(class="navbar-brand" href="") oCal
  div(class="container-fluid")
    div(class="row")
      div(class="col-sm-3 col-md-2 sidebar")
        input(type="text" id="firstname" class="form-control nameinput" placeholder="First Name")
        br
        input(type="text" id="lastname" class="form-control nameinput" placeholder="Last Name")
        br
        button(type="button" class="btn btn-success" id="submit") Get Calendar
      div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2" id="calendar")


